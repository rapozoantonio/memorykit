{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MemoryKit": "Debug"
    }
  },
  "AllowedHosts": "*",

  "ApplicationInsights": {
    "ConnectionString": "",
    "InstrumentationKey": ""
  },

  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:7000"
    ]
  },

  "ApiKeys": {
    "ValidKeys": [
      "dev-key-12345",
      "test-key-67890"
    ],
    "UserMappings": {
      "dev-key-12345": "demo_user",
      "test-key-67890": "test_user"
    }
  },

  "AzureOpenAI": {
    "Endpoint": "",
    "ApiKey": "",
    "DeploymentName": "gpt-4",
    "EmbeddingDeployment": "text-embedding-ada-002"
  },

  "Azure": {
    "Redis": {
      "ConnectionString": ""
    },
    "Storage": {
      "ConnectionString": "",
      "ContainerName": "conversations"
    },
    "TableStorage": {
      "ConnectionString": "",
      "FactsTableName": "facts",
      "PatternsTableName": "patterns"
    },
    "Search": {
      "Endpoint": "",
      "ApiKey": "",
      "IndexName": "messages"
    }
  },

  "MemoryKit": {
    "StorageProvider": "InMemory",
    "EnableAutoFallback": true,
    "MaxRetryAttempts": 3,
    "HealthCheckIntervalSeconds": 60,
    "Compression": {
      "Enabled": true,
      "Algorithm": "Selective-GZip",
      "ThresholdBytes": 1024,
      "AsyncQueueEnabled": true,
      "AsyncQueueWorkers": 2,
      "AsyncQueueMaxSize": 1000
    },
    "Embeddings": {
      "QuantizationEnabled": true,
      "Precision": "Int8"
    },
    "WorkingMemory": {
      "MaxItems": 10,
      "TtlMinutes": 60,
      "TtlHours": 24
    },
    "Scratchpad": {
      "TtlDays": 30
    },
    "SemanticMemory": {
      "MaxFacts": 1000,
      "PruneIntervalHours": 24
    },
    "EpisodicMemory": {
      "RetentionDays": 90,
      "IndexingEnabled": true
    },
    "ProceduralMemory": {
      "ConfidenceThreshold": 0.75,
      "MaxPatterns": 100
    }
  }
}
