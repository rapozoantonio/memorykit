{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MemoryKit": "Debug"
    }
  },
  "AllowedHosts": "*",

  "AzureOpenAI": {
    "Endpoint": "",
    "ApiKey": "",
    "DeploymentName": "gpt-4",
    "EmbeddingDeployment": "text-embedding-ada-002"
  },

  "Azure": {
    "Redis": {
      "ConnectionString": ""
    },
    "Storage": {
      "ConnectionString": "",
      "ContainerName": "conversations"
    },
    "TableStorage": {
      "ConnectionString": "",
      "FactsTableName": "facts",
      "PatternsTableName": "patterns"
    },
    "Search": {
      "Endpoint": "",
      "ApiKey": "",
      "IndexName": "messages"
    }
  },

  "MemoryKit": {
    "WorkingMemory": {
      "MaxItems": 10,
      "TtlMinutes": 60
    },
    "SemanticMemory": {
      "MaxFacts": 1000,
      "PruneIntervalHours": 24
    },
    "EpisodicMemory": {
      "RetentionDays": 90,
      "IndexingEnabled": true
    },
    "ProceduralMemory": {
      "ConfidenceThreshold": 0.75,
      "MaxPatterns": 100
    }
  }
}
