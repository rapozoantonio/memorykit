{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "MemoryKit": "Debug"
    }
  },

  "ApplicationInsights": {
    "ConnectionString": "",
    "InstrumentationKey": ""
  },

  "RateLimiting": {
    "PermitLimit": 10000,
    "Window": "00:01:00"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:5000",
      "https://localhost:7000"
    ]
  },

  "ApiKeys": {
    "ValidKeys": ["dev-key-12345", "test-key-67890", "demo-key-abcdef"],
    "UserMappings": {
      "dev-key-12345": "demo_user",
      "test-key-67890": "test_user",
      "demo-key-abcdef": "demo"
    }
  },

  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=memorykit;Username=memorykit;Password=memorykit_secure_pwd"
  },

  "MemoryKit": {
    "StorageProvider": "PostgreSQL",
    "SmartHeuristics": {
      "QueryClassification": {
        "SpecificLayersThreshold": 0.8,
        "WithFallbackThreshold": 0.6,
        "SignalWeights": {
          "SurfaceSignalWeight": 1.0,
          "SemanticSignalWeight": 1.2,
          "ContextualSignalWeight": 0.8,
          "NegationWeight": 1.0,
          "IntensityWeight": 1.0
        },
        "Patterns": {
          "ContinuationPatterns": [],
          "FactRetrievalPatterns": [],
          "DeepRecallPatterns": [],
          "ProceduralTriggerPatterns": []
        }
      },
      "ImportanceScoring": {
        "DampeningFactor": 0.9,
        "DefaultScore": 0.3,
        "ComponentWeights": {
          "DecisionLanguageWeight": 1.2,
          "ExplicitMarkerWeight": 1.5,
          "QuestionWeight": 0.8,
          "CodeBlockWeight": 1.3,
          "NoveltyWeight": 1.0,
          "SentimentWeight": 0.9,
          "TechnicalDepthWeight": 1.1,
          "ConversationContextWeight": 1.0
        },
        "Thresholds": {
          "CriticalThreshold": 0.8,
          "HighThreshold": 0.6,
          "NormalThreshold": 0.4
        }
      }
    }
  }
}
